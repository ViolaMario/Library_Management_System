<Page x:ConnectionId='1'
    x:Class="LibraryManager.BookListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibraryManager"
    xmlns:bll="using:LibraryManager.BLL"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" >
            <AppBarButton x:ConnectionId='12' Icon="Back" Label="Back" VerticalAlignment="Center" HorizontalAlignment="Center"                           />
            <TextBlock Text="Books" FontSize="40" HorizontalAlignment="Left" Margin="20,0,20,0" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='13' x:Name="book_name_in" PlaceholderText="Book Title" Text="" TextWrapping="Wrap" Width="150" Height="45" Margin="0,0,20,0"/>
            <TextBox x:ConnectionId='14' x:Name="Barcode_txt" PlaceholderText="Barcode: 2013" Text="" TextWrapping="Wrap" Width="150" Height="45" Margin="0,0,20,0"/>
            <TextBox x:ConnectionId='15' x:Name="book_birth" PlaceholderText="Date of Birth: yyyy.mm.dd" TextWrapping="Wrap"  Width="150" Height="45" Margin="0,0,10,0"/>
            <TextBox x:ConnectionId='16' x:Name="book_nation" PlaceholderText="Nationality: Poland" TextWrapping="Wrap"  Width="150" Height="45" Margin="0,0,20,0"/>
            <Button x:ConnectionId='17' Content="Search" HorizontalAlignment="Center" Margin="0,0,20,0"                     />
        </StackPanel>
        <ListView x:ConnectionId='2' x:Name="BooksListView" Grid.Row="1"                                                                          >
            <ListView.ItemTemplate>
                <DataTemplate x:Name="SingleLineDataTemplate"                      >
                    <StackPanel x:ConnectionId='4' Orientation="Vertical" Height="150" Padding="12"                                              HorizontalAlignment="Stretch">
                        <TextBlock x:ConnectionId='5'                        Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,4,0,0" FontSize="16"/>
                        <TextBlock x:ConnectionId='6'                        Style="{ThemeResource BaseTextBlockStyle}" Margin="0,4,0,0" FontSize="14"/>
                        <TextBlock x:ConnectionId='7'                         Style="{ThemeResource BaseTextBlockStyle}" Margin="0,4,0,0" FontSize="14"/>
                        <TextBlock x:ConnectionId='8'                      Style="{ThemeResource BaseTextBlockStyle}" Margin="0,4,0,0" FontSize="14"/>
                        <TextBlock x:ConnectionId='9'                                   Style="{ThemeResource BaseTextBlockStyle}" Margin="0,4,0,0" FontSize="14"/>
                        <TextBlock x:ConnectionId='10'                                 Style="{ThemeResource BaseTextBlockStyle}" Margin="0,4,0,0" FontSize="14"/>
                        <TextBlock x:ConnectionId='11' Text="Available"                                   Style="{ThemeResource BaseTextBlockStyle}" Margin="0,4,0,0" FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

